<div class="page-header">
  <strong><%= @index.name %></strong>
</div>

<section>
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>docs.count</th>
          <th>docs.deleted</th>
          <th>store.size</th>
          <th>pri.store.size</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @index.docs_count %></td>
          <td><%= @index.docs_deleted %></td>
          <td><%= number_to_human_size(@index.store_size_in_byte) %></td>
          <td><%= number_to_human_size(@index.pri_store_size_in_byte) %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-sm-12">
    <p>
      <strong>Dataset:</strong>
      <%= index_link_to_dataset(@index) %>
    </p>
  </div>
  <div class="col-sm-12">
    <strong>Definition</strong>
    <p>
      <%= json_editor(@index.definition, readonly: true) %>
    </p>
  </div>
</section>
<section>
  <div class="col-sm-12">
    <%= link_to 'Copy', new_index_path(copy: @index.name) %> |
    <%= link_to 'Edit', edit_index_path(@index.name) %> |
    <%= link_to 'Rename', index_rename_path(@index.name) %> |
    <%= link_to 'Destroy', @index, method: :delete, data: { confirm: "Are you sure you want to destroy '#{@index.name}'?" } %> |
    <%= link_to 'List', indices_path %>
  </div>
</section>
