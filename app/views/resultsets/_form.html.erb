<% if resultset.errors.any? %>
  <div class="form-group row">
    <div class="col-sm-12">
      <div class="alert alert-danger">
        <% resultset.errors.full_messages.each do |message| %>
          <%= message %><br/>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= form_with(model: resultset, local: true) do |form| %>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= form.label :name, class: 'control-label' %>
      <%= form.text_field :name, id: :resultset_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
