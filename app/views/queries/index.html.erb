<div class="page-header">
  <span class="glyphicon glyphicon-search"></span>
  <strong>Query</strong>
</div>

<section>
  <div class="col-sm-12">
    <%= button_to 'New Query', new_query_path, method: :get, class: 'btn btn-primary' %>
  </div>
</section>

<section>
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Query</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @queries.each do |query| %>
          <tr>
            <td><%= link_to query.name, query %></td>
            <td><%= query.preview %></td>
            <td><%= link_to 'Copy', new_query_path(copy: query.id) %></td>
            <td><%= link_to 'Edit', edit_query_path(query) %></td>
            <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-12 text-center">
    <%= paginate @queries %>
  </div>
</section>
