<% if template.errors.any? %>
  <div class="form-group row">
    <div class="col-sm-12">
      <div class="alert alert-danger">
        <% template.errors.full_messages.each do |message| %>
          <%= message %><br/>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= form_with(model: template, local: true) do |form| %>
  <% unless template.persisted? %>
    <div class="form-group row">
      <div class="col-sm-12">
        <%= form.label :name, class: 'control-label' %>
        <%= form.text_field :name, id: :template_name, class: 'form-control' %>
      </div>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= form.label :definition, class: 'control-label' %>
      <%= json_editor(template.definition, name: 'template[definition]') %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
