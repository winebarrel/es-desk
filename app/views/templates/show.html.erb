<div class="page-header">
  <strong><%= @template.name %></strong>
</div>

<section>
  <div class="col-sm-12">
    <strong>Definition</strong>
    <p>
      <%= json_editor(@template.definition, readonly: true) %>
    </p>
  </div>
</section>
<section>
  <div class="col-sm-12">
    <%= link_to 'Edit', edit_template_path(@template.name) %> |
    <%= link_to 'Destroy', @template, method: :delete, data: { confirm: "Are you sure you want to destroy '#{@template.name}'?" } %> |
    <%= link_to 'List', templates_path %>
  </div>
</section>
