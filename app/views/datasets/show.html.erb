<div class="page-header">
  <strong><%= @dataset.name %></strong>
</div>

<section>
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Index</th>
          <th>Document Type</th>
          <th>Document Count</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @dataset.name %></td>
          <td><%= dataset_link_to_index(@dataset) %></td>
          <td><%= @dataset.document_type %></td>
          <td><%= @dataset.data_count %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-sm-12">
    <strong>Data preview</strong>
    <p>
      <%= ndjson_editor(@dataset.preview, readonly: true) %>
    </p>
  </div>
  <div class="col-sm-12">
    <%= button_to 'Download', dataset_download_url(@dataset), method: :get, class: 'btn btn-default' %>
  </div>
</section>

<section>
  <div class="col-sm-12">
    <%= link_to 'Import', dataset_import_path(@dataset), data: { confirm: "Are you sure you want to import '#{@dataset.name}'?" } %> |
    <%= link_to 'Copy', dataset_copy_path(@dataset) %> |
    <%= link_to 'Edit', edit_dataset_path(@dataset) %> |
    <%= link_to 'Destroy', @dataset, method: :delete, data: { confirm: "Are you sure you want to destroy '#{@dataset.name}'?" } %> |
    <%= link_to 'List', datasets_path %>
  </div>
</section>
