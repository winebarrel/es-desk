<div class="page-header">
  <span class="glyphicon glyphicon-book"></span>
  <strong>Dataset</strong>
</div>

<section>
  <div class="col-sm-12">
    <%= button_to 'New Dataset', new_dataset_path, method: :get, class: 'btn btn-primary' %>
  </div>
</section>

<section>
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Index</th>
          <th>Type</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @datasets.each do |dataset| %>
          <tr>
            <td><%= link_to dataset.name, dataset %></td>
            <td><%= dataset_link_to_index(dataset) %></td>
            <td><%= dataset.document_type %></td>
            <td><%= link_to 'Import', dataset_import_path(dataset), data: { confirm: "Are you sure you want to import '#{dataset.name}'?" } %></td>
            <td><%= link_to 'Copy', 'javascript:void(0);', onclick: %!copy_dataset("#{j dataset_copy_path(dataset)}", "#{j dataset.name}-" + new Date().getTime())! %></td>
            <td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
            <td><%= link_to 'Destroy', dataset, method: :delete, data: { confirm: "Are you sure you want to destroy '#{dataset.name}'?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-12 text-center">
    <%= paginate @datasets %>
  </div>
</section>
